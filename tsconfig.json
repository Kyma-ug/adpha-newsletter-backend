{
  "compilerOptions": {
    "target": "ES2020", // Or "ESNext"
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx" // Or remove this line
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}